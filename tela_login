import React, { useState } from 'react';
import {
  Alert,
  Button,
  Image,
  Pressable,
  StyleSheet,
  Text,
  TextInput,
  View,
} from 'react-native';

export default function App() {
  // Estados para armazenar o valor dos campos de e-mail e senha
  const [email, setEmail] = useState('');
  const [senha, setSenha] = useState('');

  // Verifica se ambos os campos foram preenchidos para habilitar o botão
  const isFormValid = email.trim() !== '' && senha.trim() !== '';

  // Função executada ao clicar no botão "ENTRAR"
  const handleLogin = () => {
    Alert.alert('Login realizado com sucesso!');
  };

  // Função ao clicar no link "Registrar-se"
  const handleRegister = () => {
    Alert.alert('Tela de Registro em breve!');
  };

  // Função ao clicar no link "Redefinir a Senha"
  const handleResetPassword = () => {
    Alert.alert('Tela de redefinição de senha em breve!');
  };

  return (
    <View style={styles.container}>
      {/* Logo ou imagem superior */}
      <Image
        source={{
          uri: 'https://reactnative.dev/img/tiny_logo.png',
        }}
        style={styles.logo}
      />

      {/* Campo de entrada de e-mail */}
      <Text style={styles.label}>E-mail</Text>
      <TextInput
        style={styles.input}
        placeholder="Digite seu e-mail"
        keyboardType="email-address" // Teclado específico para e-mail
        value={email}
        onChangeText={setEmail}
      />

      {/* Campo de entrada de senha */}
      <Text style={styles.label}>Senha</Text>
      <TextInput
        style={styles.input}
        placeholder="Digite sua senha"
        secureTextEntry // Protege a senha (***)
        value={senha}
        onChangeText={setSenha}
      />

      {/* Botão de login, só habilitado quando os campos estão preenchidos */}
      <Button title="ENTRAR" onPress={handleLogin} disabled={!isFormValid} />

      {/* Links abaixo do botão */}
      <View style={styles.linksContainer}>
        {/* Link: Registrar-se */}
        <Pressable onPress={handleRegister}>
          <Text style={styles.linkText}>Registrar-se</Text>
        </Pressable>

        {/* Link: Redefinir a senha */}
        <Pressable onPress={handleResetPassword}>
          <Text style={styles.linkText}>Redefinir a Senha</Text>
        </Pressable>
      </View>
    </View>
  );
}

// Estilização da tela
const styles = StyleSheet.create({
  container: {
    flex: 1, // Ocupa a tela toda
    backgroundColor: '#f2f2f2',
    alignItems: 'center',
    justifyContent: 'center',
    padding: 20,
  },
  logo: {
    width: 100,
    height: 100,
    marginBottom: 30,
  },
  label: {
    alignSelf: 'flex-start',
    marginLeft: 10,
    marginTop: 10,
    fontWeight: 'bold',
    fontSize: 16,
  },
  input: {
    width: '100%',
    height: 45,
    borderColor: '#ccc',
    borderWidth: 1,
    borderRadius: 8,
    paddingHorizontal: 10,
    marginBottom: 10,
    backgroundColor: '#fff',
  },
  linksContainer: {
    marginTop: 20,
    alignItems: 'center',
  },
  linkText: {
    color: '#007bff',
    marginTop: 10,
    textDecorationLine: 'underline',
    fontSize: 14,
  },
});
